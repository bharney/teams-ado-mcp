{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "AzureDevOps": {
    "Organization": "your-ado-org",
    "Project": "your-project",
    "PersonalAccessToken": "",
    "DefaultWorkItemType": "Task",
    "DefaultAreaPath": "",
    "DefaultIterationPath": ""
  },
  
  "Identity": {
    "UseManagedIdentity": true,
    "UserAssignedClientId": "",
    "EnableTokenCaching": true,
    "TokenCacheExpirationMinutes": 55,
    "RequiredScopes": ["https://app.vssps.visualstudio.com/.default"],
    "Authority": "https://login.microsoftonline.com/"
  },
  
  "KeyVault": {
    "VaultUri": "",
    "EnableCaching": true,
    "CacheExpirationMinutes": 60
  },
  
  "Mcp": {
    "ServerName": "teams-ado-mcp-server",
    "Version": "1.0.0",
    "Description": "MCP server for Teams-Azure DevOps integration",
    "EnableDiagnostics": true,
    "RequestTimeoutSeconds": 30,
    "MaxConcurrentRequests": 10
  }
}
