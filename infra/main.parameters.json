{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "value": "${AZURE_ENV_NAME}"
    },
    "location": {
      "value": "${AZURE_LOCATION}"
    },
    "containerAppName": {
      "value": "teams-ado-mcp-app"
    },
    "mcpServerAppName": {
      "value": "mcp-server"
    },
    "logRetentionInDays": {
      "value": 30
    },
    "enableApplicationInsights": {
      "value": true
    }
  }
}
